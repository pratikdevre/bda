<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android = "http://schemas.android.com/apk/res/android"
          package = "com.pratik.blooddonationapp">

    <uses-permission android:name = "android.permission.INTERNET" />

    <application
        android:allowBackup = "true"
        android:icon = "@mipmap/ic_launcher"
        android:label = "@string/app_name"
        android:roundIcon = "@mipmap/ic_launcher_round"
        android:supportsRtl = "true"
        android:theme = "@style/Theme.BloodDonationApp">
        <activity
            android:name = ".Profile.SentEmailsActivity"
            android:exported = "false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name = ".Profile.FullInformationActivity"
            android:exported = "false"
            android:parentActivityName = ".MainActivity" />
        <activity
            android:name = ".Profile.AboutActivity"
            android:exported = "false"
            android:parentActivityName = ".MainActivity" />
        <activity
            android:name = ".Profile.NotificationActivity"
            android:exported = "false"
            android:parentActivityName = ".MainActivity" />
        <activity
            android:name = ".Profile.MyProfileActivity"
            android:exported = "false"
            android:parentActivityName = ".MainActivity" />
        <activity
            android:name = ".signupSignin.RecipientSignUpActivity"
            android:exported = "false" />
        <activity
            android:name = ".signupSignin.DonorSignUpActivity"
            android:exported = "false" />
        <activity
            android:name = ".signupSignin.ChooseSignUpActivity"
            android:exported = "false" />
        <activity
            android:name = ".signupSignin.SignInActivity"
            android:exported = "false" />
        <activity
            android:name = ".splashScreeen.SplashScreen"
            android:exported = "true">
            <intent-filter>
                <action android:name = "android.intent.action.MAIN" />

                <category android:name = "android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name = ".MainActivity"
            android:exported = "true">
        </activity>
    </application>

</manifest>